<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="120dp"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/categoryNameIconContainer"
            android:backgroundTint="#C8EAF5"
            app:cardCornerRadius="40dp"
            app:cardElevation="5dp"
            android:layout_margin="@dimen/activity_vertical_margin_1.2x"
            app:layout_constraintTop_toTopOf="@id/icon"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/ic_action"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:elevation="10dp"
            android:id="@+id/icon"
            android:layout_marginStart="@dimen/activity_vertical_margin_3x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/categoryName"
            android:textColor="@color/md_black_1000"
            android:fontFamily="@font/proxima_nova_bold"
            android:ellipsize="end"
            android:textSize="14sp"
            android:lines="2"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="@dimen/activity_vertical_margin_2x"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
