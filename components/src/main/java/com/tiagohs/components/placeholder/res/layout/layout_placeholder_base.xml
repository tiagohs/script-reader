<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/placeholderView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:shimmer_duration="1200"
        app:shimmer_colored="true"
        app:shimmer_highlight_alpha="0"
        app:shimmer_base_alpha="1"
        app:shimmer_direction="left_to_right"
        app:shimmer_intensity="1"
        app:shimmer_base_color="@color/md_theme_light_onPrimaryContainer"
        app:shimmer_highlight_color="@color/md_theme_light_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loadViewContainer"
            android:orientation="vertical" />

</com.facebook.shimmer.ShimmerFrameLayout>